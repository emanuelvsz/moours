{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    /* Type Checking */
    "strict": true,
    // We disable these 2 options until we fix them
    "strictFunctionTypes": false,
    "useUnknownInCatchVariables": false,

    /* Modules */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* Emit */
    "noEmit": true,

    /* Interop Constraints */
    // We use isolatedModules until we have fixed everything to replace it with verbatimModuleSyntax
    "isolatedModules": true,
    // "verbatimModuleSyntax": true,

    /* Language and Environment */
    "jsx": "react-jsx",
    "target": "es2024",

    /* Completeness */
    "skipLibCheck": true,

    "paths": {
      "@lib/*": ["./src/apps/web/lib/*"],
      "@web/*": ["./src/apps/web/*"],
      "@infra/*": ["./src/infra/*"],
      "@core/*": ["./src/core/*"],
      "@components": ["./src/apps/web/components"],
      "@screens": ["./src/apps/web/screens"]
    }
  }
}
